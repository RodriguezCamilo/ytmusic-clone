---
import Layout from "../layouts/Layout.astro";
import { playlists, songs } from "../lib/data";
import SongsItemCard from "../components/SongsItemCard.astro";

const shuffleArray = (array: []) => {
    let shuffled = array.slice();
    for (let i = shuffled.length - 1; i > 0; i--) {
        const j = Math.floor(Math.random() * (i + 1));
        [shuffled[i], shuffled[j]] = [shuffled[j], shuffled[i]];
    }
    return shuffled;
};

const shuffledSongs = shuffleArray(songs);
---

<Layout title="YTMusic Clone">
    <div
        class="bg-transparent flex flex-col gap-10 transition-all duration-300 relative mt-32 mx-6 md:mx-24 pb-6"
    >
        <h2 id="Noto" class="font-bold text-2xl md:text-5xl">Sencillos nuevos</h2>

        <div class="flex flex-row overflow-x-scroll gap-6">
            {shuffledSongs.map((song) => <SongsItemCard songs={song} />)}
        </div>
    </div>
</Layout>
